<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
  <name>*dbname*</name>
  <create>true</create>
  <overwrite>false</overwrite>
  <charset>utf8</charset>
  <table>
    <name>*dbprefix*sciencemesh</name>
    <declaration>
      <field>
        <name>iopurl</name>
        <type>text</type>
	<default>http://localhost:10999</default>
        <notnull>true</notnull>
	<comments>Address of the IOP</comments>
      </field>
      <field>
        <name>country</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>2</length>
	<comments>Country code ISO</comments>
      </field>
      <field>
        <name>hostname</name>
        <type>text</type>
	<default>example.org</default>
        <notnull>true</notnull>
        <comments>Public hostname of the server</comments>
      </field>
      <field>
        <name>sitename</name>
        <type>text</type>
	<default>CERNBox</default>
        <notnull>true</notnull>
        <comments>Name of the site</comments>
      </field>
    </declaration>
  </table>
</database>
